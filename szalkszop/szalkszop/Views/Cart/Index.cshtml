@model szalkszop.ViewModels.CartViewModel
@using szalkszop.Core.Models;
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
	<h3>Cart Page</h3>
	@if (Model != null)
	{
		<table cellpadding="2" cellspacing="2" border="1">
			<tr>
				<th>Option</th>
				<th>Id</th>
				<th>Name</th>
				@*<th>Photo</th>*@
				<th>Price</th>
				<th>Quantity</th>
				<th>Sub Total</th>
			</tr>
			@foreach (var item in Model.ItemList)
			{
				<tr>
					<td><a href="@Url.Action("Remove", "Cart", new { id = item.Product.Id })">Remove</a></td>
					<td>@item.Product.Id</td>
					<td>@item.Product.Name</td>
					@*<td>
							<img src="~/Images/@item.Product.Images.FirstOrDefault().ThumbNailName" />
						</td>*@
					<td>@item.Product.Price</td>
					<td>@item.Quantity</td>
					<td>@(item.Product.Price * item.Quantity)</td>
				</tr>
			}

			<tr>
				<td align="right" colspan="6">Sum</td>
				<td>
					@{
						List<Item> cart = (List<Item>)Session["cart" + Model.UserId];
						var total = cart.Sum(item => item.Product.Price * item.Quantity);
					}
					@total
				</td>
			</tr>
		</table>
		<br>
						}

	<a href="@Url.Action("Index", "Product")">Continue Shopping</a>

</body>