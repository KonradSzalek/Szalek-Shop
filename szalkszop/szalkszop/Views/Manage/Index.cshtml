@model szalkszop.ViewModels.UserContactDetailsViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>My account</h2>
<hr />
<div>
	<table class="table table-striped">
		<tbody>
			<tr>
				<th width="300px">Full Name</th>
				<td id="personalinfo">@Model.Name @Model.Surname</td>
			</tr>
			<tr>
				<th>Address</th>
				<td id="personalinfo">@Model.Address</td>
			</tr>
			<tr>
				<th>City</th>
				<td id="personalinfo">@Model.City</td>
			</tr>
			<tr>
				<th>Postal Code</th>
				<td id="personalinfo">@Model.PostalCode</td>
			</tr>
		</tbody>
	</table>

	<div id="inlinediv1">
		<a href="@Url.Action("ChangePassword")" class="btn btn-primary">
			<i class="glyphicon glyphicon-lock"></i>  Change password
		</a>
	</div>
	<div id="inlinediv2">
		<a href="@Url.Action("ChangeContactDetails")" class="btn btn-primary">
			<i class="glyphicon glyphicon-pencil"></i>  Edit Your Details
		</a>
	</div>
</div>
