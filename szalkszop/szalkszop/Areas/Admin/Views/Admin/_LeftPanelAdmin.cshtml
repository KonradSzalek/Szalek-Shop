@model szalkszop.ViewModels.UserProductCategoryListViewModel
@{
	Layout = null;
}
<HEAD>
	@*<link rel="stylesheet" type="text/css" href="~/Content/Site.css">*@
	<link href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>

	<style>
		.sidebar {
			width: 160px;
			z-index: 1;
			top: 0;
			left: 0;
			background-color: #111;
			overflow-x: hidden;
			padding-top: 5px;
			padding-bottom: 5px;
			border-radius: 5px;
			float: right;
		}

			.sidebar a {
				padding: 6px 8px 6px 16px;
				text-decoration: none;
				font-size: 12px;
				color: #818181;
				display: block;
			}

			.sidebar p.title {
				padding: 6px 8px 6px 16px;
				padding-bottom: 4px;
				margin-bottom: 0px;
				text-decoration: none;
				font-size: 16px;
				color: #818181;
				display: block;
				font-weight: bold;
			}

			.sidebar a:hover {
				color: #f1f1f1;
			}

		.main {
			margin-left: 160px; /* Same as the width of the sidenav */
			padding: 0px 10px;
		}

		@@media screen and (max-height: 450px) {
			.sidebar {
				padding-top: 15px;
			}

				.sidebar a {
					font-size: 18px;
				}
		}

		#left-column .left-nav-categories {
			font-size: 12px;
			line-height: normal;
			text-align: left !important;
		}

		#left-column div {
			margin-bottom: 10px;
		}

		.small-box {
			background-color: #fff;
			border: 1px solid #d5d5d5;
			overflow: hidden;
			margin: 0 0 20px;
			padding: 0;
			border-radius: 4px;
		}

		.hidden-xs {
			display: block !important;
		}

		#left-column .left-nav-categories .inner-box {
			padding: 0;
			margin-bottom: 0;
		}

		#left-column .left-nav-categories .title {
			background-color: black;
			font-size: 15px;
			padding: 6px 12px !important;
		}

			#left-column .left-nav-categories .title a {
				color: #999999;
			}

				#left-column .left-nav-categories .title a:hover {
					text-decoration: none;
				}

		#left-column .left-nav-categories ul {
			padding: 0;
			margin: 0;
		}

		#left-column .left-nav-categories > .inner-box > ul > li {
			background-color: #f1f1f1;
			border-bottom: 1px solid #d5d5d5;
		}

		#left-column .left-nav-categories ul li {
			padding: 0;
			list-style-type: none;
			background-color: #fff;
		}

			#left-column .left-nav-categories ul li a {
				display: block;
				padding: 6px 2px 6px 12px;
				color: #222;
				border-bottom: 1px solid #f1f1f1;
			}

				#left-column .left-nav-categories ul li a:hover {
					color: gray;
					text-decoration: none;
				}

		#title {
			color: white;
		}
	</style>
</HEAD>

<body>
	<br />

	<div id="left-column">
		<div class="small-box left-nav-categories hidden-xs">
			<div class="inner-box title">
				<i id="title" class="glyphicon glyphicon-cog"></i><a href="#">&nbsp My account</a>
			</div>
			<div class="inner-box">
				<ul class="list">
					<li><a href="@Url.Action("Index","Manage")"><i class="glyphicon glyphicon-user"></i>&nbsp Personal information</a></li>
					<li><a href="@Url.Action("MyOrders","Order")"><i class="glyphicon glyphicon-shopping-cart"></i>&nbsp My orders</a></li>
				</ul>
			</div>
		</div>

		<div class="small-box left-nav-categories hidden-xs">
			<div class="inner-box title">
				<i id="title" class="glyphicon glyphicon-list-alt"></i><a href="#">&nbsp Categories</a>
			</div>
			<div class="inner-box">
				<ul class="list">
					@foreach (var category in Model.ProductCategoryWithProductCountList)
					{
						<li><a href="@Url.Action("Products", "ProductCategory", new { categoryId = category.Id, area = string.Empty })"><i class="glyphicon glyphicon-tags"></i>&nbsp @category.Name</a></li>
					}
				</ul>
			</div>
		</div>
		@if (User.IsInRole("Admin"))
		{
			<div class="small-box left-nav-categories hidden-xs">
				<div class="inner-box title">
					<i id="title" class="glyphicon glyphicon-wrench"></i><a href="#">&nbsp Admin Panel</a>
				</div>
				<div class="inner-box">
					<ul class="list">
						<li><a href="@Url.Action("Index","User", new { area = "Admin" })"><i class="glyphicon glyphicon-user"></i>&nbsp Users</a></li>
						<li><a href="@Url.Action("Index","Product", new { area = "Admin" })"><i class="glyphicon glyphicon-barcode"></i>&nbsp Products</a></li>
						<li><a href="@Url.Action("Index","ProductCategory", new { area = "Admin" })"><i class="glyphicon glyphicon-list-alt"></i>&nbsp Categories</a></li>
						<li><a href="@Url.Action("Index","PaymentMethod", new { area = "Admin" })"><i class="glyphicon glyphicon-euro"></i>&nbsp Payment methods</a></li>
						<li><a href="@Url.Action("Index","DeliveryType", new { area = "Admin" })"><i class="glyphicon glyphicon-road"></i>&nbsp Delivery types</a></li>
						<li><a href="@Url.Action("Index","Order", new { area = "Admin" })"><i class="glyphicon glyphicon-shopping-cart"></i> &nbspOrders</a></li>
					</ul>
				</div>

			</div>
		}
	</div>
</body>
