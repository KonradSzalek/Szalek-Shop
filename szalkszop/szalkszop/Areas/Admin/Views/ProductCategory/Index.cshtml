@model szalkszop.ViewModels.AdminProductCategoriesViewModel
@{
	ViewBag.Title = "Manage product categories";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Manage product categories</h2>

<table cellpadding="10">
	<thead>
		<tr>
			<th>Category Id</th>
			<th>Category Name</th>
			<th>Amount of Products</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model.ProductCategoriesWithProductCountDto)
		{
			<tr>
				<td>@category.Id</td>
				<td>@category.Name</td>
				<td>@category.AmountOfProducts</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = category.Id })
					<br />
					@Html.ActionLink("Delete", "Delete", new { id = category.Id })
				</td>
			</tr>
		}
	</tbody>
</table>
<br />
@Html.ActionLink("Add a category", "Create")




