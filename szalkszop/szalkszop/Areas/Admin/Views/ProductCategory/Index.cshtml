@model szalkszop.ViewModels.ProductCategoryViewModel
@{
    ViewBag.Title = "Product Category List";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@Model.Heading</h2>

<table cellpadding="10">
	<thead>
	<tr>
		<th>Category Id</th>
		<th>Category Name</th>
		<th>Amount of Products</th>
		<th>Action</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var category in Model.ProductCategories)
	{
		<tr>
			<td>@category.Id</td>
			<td>@category.Name</td>
			<td>@category.AmountOfProducts</td>
			<td>
				@Html.ActionLink("Edit", "EditCategory", new {id = category.Id})
				<br/>
				@Html.ActionLink("Delete", "DeleteCategory", new {id = category.Id})
			</td>
		</tr>
	}
	</tbody>
</table>
<br/>
@Html.ActionLink("Add a category", "CreateCategory")



   
