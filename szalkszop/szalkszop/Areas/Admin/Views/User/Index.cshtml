@model szalkszop.ViewModels.UserListViewModel
@{
	ViewBag.Title = "Manage users";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

	<div id="div1">
		<h2>Manage users</h2>
	</div>
	<div id="div2">
		<a href="@Url.Action("Create", "User")"
		   class="btn btn-primary">
			<span>
				<strong>Add</strong>
			</span>
		</a>
	</div>

<br />
<br />
		@using (Html.BeginForm("Search", "User", FormMethod.Post))
		{
			<div class="form-group">
				<div class="input-group" style="width: 300px">
					@Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Search by Email or Surname..." })
					<span class="input-group-addon" id="myButton">
						<button type="submit" class="btn btn-primary" id="myButton1">
							<i class="glyphicon glyphicon-search"></i>
						</button>
					</span>
				</div>
			</div>
		}

	<div class="table-responsive">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Email</th>
					<th>Full Name</th>
					<th>Date of registration</th>
					<th>Edit</th>
					<th>Remove</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var user in Model.UserList)
			{
					<tr>
						<td>@user.Email</td>
						<td>@user.Name @user.Surname</td>
						<td>@user.RegistrationDateTime</td>
						<td>
							<a href="@Url.Action("Edit", "User", new { id = user.Id } )" class="btn btn-primary">
								<i class="glyphicon glyphicon-pencil"></i>
							</a>
						</td>
						<td>
							<a href="@Url.Action("Delete", "User", new { id = user.Id } )" class="btn btn-primary">
								<i class="glyphicon glyphicon-remove"></i>
							</a>
						</td>
					</tr>
			}
			</tbody>
		</table>
	</div>

