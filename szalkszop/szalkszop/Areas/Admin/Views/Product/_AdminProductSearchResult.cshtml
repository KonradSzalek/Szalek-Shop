@model szalkszop.ViewModels.ProductListSearchViewModel
@{
	Layout = null;
}

<div class="table-responsive">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Product Name</th>
				<th>Product category</th>
				<th>Amount in stock</th>
				<th>Date of adding</th>
				<th>Price</th>
				<th>Description</th>
				<th>Edit</th>
				<th>Remove</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model.ProductSearchResultList)
			{
				<tr>
					<td>@product.Name</td>
					<td>@product.CategoryName</td>
					<td>@product.AmountInStock</td>
					<td>@product.DateOfAdding</td>
					<td>@product.Price</td>
					<td>@product.Description</td>
					<td>
						<a href="@Url.Action("Edit", "Product", new { id = product.Id } )" class="btn btn-primary">
							<i class="glyphicon glyphicon-pencil"></i>
						</a>
					</td>
					<td>
						<a href="@Url.Action("Delete", "Product", new { id = product.Id } )" class="btn btn-primary">
							<i class="glyphicon glyphicon-remove"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>